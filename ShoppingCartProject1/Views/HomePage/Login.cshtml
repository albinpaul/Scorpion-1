@model ShoppingCartProject1.Models.tblProduct

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutHF.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal center-block">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Login Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("name")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("password")
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group center-block">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
        <div class="clearfix"></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



